# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For local development: mongodb://localhost:27017/mubeen-auth
# For Docker: mongodb://mongo:27017/mubeen-auth
MONGODB_URI=mongodb://localhost:27017/mubeen-auth

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid
OTP_EXPIRY_MINUTES=10

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_app_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# SMS API (TextBelt)
TEXTBELT_API_KEY=your_textbelt_api_key

# CORS Configuration (comma-separated origins or * for all)
ALLOWED_ORIGINS=*
